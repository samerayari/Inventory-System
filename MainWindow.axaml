<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Afl6.MainWindow"
        Title="Inventory System" Width="600" Height="500">

    <StackPanel Margin="20" Spacing="8">
        <TextBlock Text="Queued Orders" FontSize="16"/>
        <ListBox Name="QueuedList" Height="100"/>

        <Button Name="ProcessButton" Content="Process Next Order" Width="200"/>

        <TextBlock Text="Processed Orders" FontSize="16" Margin="0,10,0,0"/>
        <ListBox Name="ProcessedList" Height="100"/>

        <TextBlock Name="RevenueText" FontSize="16" Margin="0,10,0,0"/>

        
        <TextBlock Name="InventoryText" FontSize="14" Margin="0,15,0,0"
                   TextWrapping="Wrap"/>
    </StackPanel>
</Window>